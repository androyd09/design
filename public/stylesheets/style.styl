html
    height 100%
    width 100%
    background-color bgColor
    font-size 10px
//    width 100%
body
    font 1.4rem "Lucida Grande", Helvetica, Arial, sans-serif
    height 100%
    min-height 1100px
    margin 0 0 0 0 
    padding 0
    border none
    header
        position sticky
        display block
        top 0
        height 50px
        background-color mainColor1
        margin 0
        padding 10px 0 0 0
        z-index 1000
        nav
            width 100%
            height calc(100% - 20px)
            padding 0
            margin 0
            position absolute
            bottom 0
            border-bottom solid 10px
            border-bottom-color accentColor1
            ul
                width calc(100% - 20px)
                height 100%
                margin 0
                padding 0 10px
                position absolute
                display flex
                bottom 0
                list-style-type none
                li
                    display inline-flex
                    flex-basis auto
                    position relative
                    width 140px
                    margin 0
                    padding 0
                    height 100%
                    border-top-left-radius 15px
                    border-top-left-radius 15px
                    background-color accentColor3
                    &:hover
                        a
                            background-color accentColor2
                    &.currentPage
                        a
                            background-color accentColor1
                            color white
                            border-color 
                    a 
                        //height calc(100% - 5px)
                        height 100%
                        width calc(100% - 5px)
                        padding 0
                        margin 0
                        font-size 2rem
                        display inline-block
                        position absolute
                        bottom 0
                        border-left 5px solid accentColor3
                        //border-top 5px solid accentColor1
                        border-top-left-radius 15px
                        color #000
                        &[stv-wip]:hover
                            color #000
                        div
                            display inline-block
                            position relative
                            height 100%
                            width 100%
                            p
                                display inline-block
                                position absolute
                                bottom 0
                                line-height 2rem
                                height 20px
                                text-align center
                                width 100%
                                padding 0 0 10px 0
                                margin 0

                            
    footer
        height 90px
        background-color #BBB
    header
    footer
        width 100%
    main
        color #000
        width 70%
        position relative
        wid = @width
        left calc((50% - (70% / 2)))
        padding 0
        margin 0
        display inline-block
    main
        height 100%


a
    color #7ec13f
    text-decoration none
    &:hover
        color: linkColor1
